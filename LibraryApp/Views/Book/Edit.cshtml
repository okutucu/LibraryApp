@using LibraryApp.Dto
@model (Book book,List<AuthorDto> authors,List<BookTypeDto> bookTypes)
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="text-center">Kitap Güncelleme Sayfası</h3>

<form method="post" asp-controller="Book" asp-action="Edit">
	
	<input asp-for="book.ID" type="hidden"/>

	<div class="mb-3"> 
		<label class="form-label" asp-for="book.BookName">Name</label>
		<input type="text" class="form-control" asp-for="book.BookName"/>
	</div>
	<div class="mb-3"> 
		<label class="form-label" asp-for="book.PageCount">Sayfa Sayısı</label>
		<input type="text" class="form-control" asp-for="book.PageCount"/>
	</div>
	<div class="mb-3"> 
		<label class="form-label" asp-for="book.AuthorID">Yazar</label>
		<select class="form-control" asp-for="book.AuthorID" asp-items="@(new SelectList(Model.authors,"ID","FullName"))"></select>
		
	</div>
	<div class="mb-3"> 
		<label class="form-label" asp-for="book.BookTypeID">Kitap Kategorisi</label>
		<select class="form-control" asp-for="book.BookTypeID" asp-items="@(new SelectList(Model.bookTypes,"ID","Name"))"></select>
		
	</div>

	
	<div class="mb-3">
		
		<button type="submit" class="btn btn-primary">Kaydet</button>
	</div>

</form>